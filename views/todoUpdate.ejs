<!DOCTYPE html>
<head>
  <title>Task Master</title>
  <link rel="stylesheet" href="/css/style.css" type="text/css" />
  <link
    rel="stylesheet"
    href="https://use.fontawesome.com/releases/v5.8.2/css/all.css"
    integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay"
    crossorigin="anonymous"
  />
</head>
<body>
  <div class="todo-container">
    <h2>Task Master</h2>
    <div class="todo">
      <form action="" method="POST" class="todo-header">
        <input type="text" name="content" required />
        <button type="submit"><span class="fas fa-plus"></span></button>
      </form>
      <ul class="todo-list">
        <% todos.forEach(n => { %> <% if (n._id == updateId) { %>
        <li class="todo-list-item">
          <form action="/update/<%= n._id %>" method="POST">
            <input type="text" value="<%= n.content %>" name="content" />
            <button type="submit">Confirm</button>
            <a href="/" class="cancel">Cancel</a>
          </form>
        </li>
        <% } else { %>
        <li class="todo-list-item">
          <div class="todo-list-item-name"><%= n.content %></div>
          <a href="/update/<%= n._id %>" class="edit">
            <span class="fas fa-edit"></span>
          </a>
          <a href="/delete/<%= n._id %>" class="remove">
            <span class="fas fa-times"></span>
          </a>
        </li>
        <% } %> <% }) %>
      </ul>
    </div>
  </div>
</body>
